<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bbbbbbb"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#4D000000"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/pop_voice_yuyin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/yunyintiao" />

        <TextView
            android:id="@+id/pop_voice_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_toRightOf="@+id/pop_voice_yuyin"
            android:text="01"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/pop_voice_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pop_voice_yuyin"
            android:layout_centerHorizontal="true"
            android:text="向上滑取消发送"
            android:textSize="25sp" />
    </RelativeLayout>
</RelativeLayout>