<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_height="120dp">

    <LinearLayout
        android:id="@+id/xian1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D4D2D2"
        android:orientation="horizontal" />
   <RelativeLayout
       android:id="@+id/xiagnqing"
       android:layout_width="match_parent"
       android:layout_margin="20dp"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:id="@+id/circle_adapter_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:text="a啊啊啊"
               android:textSize="15sp"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/circle_adapter_time"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:text="时间" />

           <TextView
               android:id="@+id/circle_adapter_message"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:text="时间" />

       </LinearLayout>
       <RelativeLayout
          android:layout_alignParentBottom="true"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:layout_alignParentRight="true"
               android:id="@+id/circle_adapter_jianyi"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="建议:"
               />

           <TextView
               android:id="@+id/fapengyouquan_shoucnag"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="20dp"
               android:layout_toLeftOf="@+id/circle_adapter_jianyi"
               android:text="收藏:" />

       </RelativeLayout>
       <RelativeLayout
           android:visibility="gone"
           android:id="@+id/xuanshang"
           android:layout_marginRight="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_alignParentRight="true"
               android:id="@+id/circle_adapter_xuanshang"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="建议:"
               />
           <ImageView
               android:id="@+id/circle_adapter_image"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toLeftOf="@+id/circle_adapter_xuanshang"
               android:src="@mipmap/xuanshagn"
                    />
       </RelativeLayout>
   </RelativeLayout>
</LinearLayout>