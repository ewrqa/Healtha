<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity">

    <ImageView
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:src="@mipmap/fanbailogo"
        android:layout_marginTop="46dp"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:background="@drawable/login_shape">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/email"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/register_eimail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入邮箱"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/register_getEmail"
                    android:layout_width="62dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/login_button_shape"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="8sp" />
            </RelativeLayout>
        </LinearLayout>
<!--            验证码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/anquan"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="53dp">

                <EditText
                    android:id="@+id/register_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入验证码"
                    android:textColor="#999999"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

<!--        输入密码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/lock"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/register_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:textColor="#999999"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/register_stopeye"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/stop_eye" />
            </RelativeLayout>
        </LinearLayout>
<!--            再次输入密码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/lock"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/register_password2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请再次输入密码"
                    android:inputType="textPassword"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/register_stopeye2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/stop_eye" />
            </RelativeLayout>
        </LinearLayout>

<!--        邀请码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/yaoqing"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入邀请码"
                    android:inputType="textPassword"
                    android:textColor="#999999"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="选填"
                    android:textSize="10sp"
                    />
            </RelativeLayout>
        </LinearLayout>
<!--        注册的按钮-->
        <Button
            android:id="@+id/register_register"
            android:layout_width="230dp"
            android:layout_height="36dp"
            android:background="@drawable/login_button_shape"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"
            android:text="注册"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>
</LinearLayout>