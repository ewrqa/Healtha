<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="12dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/healthmessage3_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="健康啊"
        />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/healthmessage3_image1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/healthmessage3_image2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/healthmessage3_image3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/healthmessage3_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="新内科医生" />

        <TextView
            android:id="@+id/healthmessage3_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="新内科医生"
            android:textSize="10sp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</LinearLayout>